[user]
	name = Lorenzo Bolla
	email = lbolla@gmail.com

[core]
	editor = vim

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore

[alias]
	;  s = status
	;  w = whatchanged
	;  l = log
	;  c = commit
	;  a = add
	;  d = diff
	review = push origin HEAD:refs/for/master # push for review on gerrit
	rank = shortlog -sn --no-merges
	searchcommits = "!f() { query=\"$1\"; shift; git log -S\"$query\" \"$@\"; }; f \"$@\""
	last = cat-file commit HEAD

[diff "mwbdiff"]
    textconv = mwb-diff

[tig]
    show-date = yes
    tab-size = 8
    show-refs = yes
